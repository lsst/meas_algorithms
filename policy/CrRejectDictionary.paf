#<?cfg paf dictionary ?>
#
# This file should be moved back to meas/utils when #1035 is resolved
#
target: crRejectionPolicy

definitions: {
    nCrPixelMax: {
        type: "int"
        description: "maximum number of contaminated pixels"
        minOccurs: 0
        maxOccurs: 1
        default: 10000
    }
        
    gain: {
        type: "double"
        description: "Gain of detector; electrons/DN"
        minOccurs: 0                    # May be set from the image metadata
        maxOccurs: 1
    }

    minSigma: {
        type: "double"
        description: "CRs must be > this many sky-sig above sky"
        maxOccurs: 1
        default: 6.0
    }
    
    min_DN: {
        type: "double"
        description: "CRs must have > this many DN (== electrons/gain) in initial detection"
        maxOccurs: 1
        default: 150.0
    }

    cond3_fac: {
        type: "double"
        description: "used in condition 3 for CR; see CR.cc code"
        maxOccurs: 1
        default: 2.5
    }

    cond3_fac2: {
        type: "double"
        description: "used in condition 3 for CR; see CR.cc code"
        maxOccurs: 1
        default: 0.6
    }

    niteration: {
        type: "int"
        description: "number of times to look for contaminated pixels near known CR pixels"
        maxOccurs: 1
        default: 3
    }
}
